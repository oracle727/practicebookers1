<h1>Editing Book</h1>
<%= form_with model:@book,local:true do |f| %>
   <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :body %><br>
  <%= f.text_area :body %>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>

<%= link_to'Show', book_path(@book), class:'show'%>
|
<%= link_to'Back', books_path,class:'back' %>