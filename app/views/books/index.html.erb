<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>body</th>
      <th colapan="3"></th>
    </tr>
  </thead>
<tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to"Show",book_path(book.id) %></td>
    <td><%= link_to"Edit",edit_book_path(book.id) %></td>
    <td><%= link_to"Destroy",book_path(book.id), method: :delete,data: { confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
  </table>
</tbody>

<h2>New book</h2>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>
 <div>
   <%= f.label :title %>
 <%= f.text_field :title %>
 </div>
 <div>
 <%= f.label :body %>
 <%= f.text_area :body %>
 </div>
 <div>
 <%= f.submit %>
 </div>
<% end %>
<% end %>